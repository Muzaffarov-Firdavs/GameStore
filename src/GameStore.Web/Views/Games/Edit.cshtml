@model GameUpdateDto

@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="box">
        <div class="form-group">
            <label asp-for="Name" class="control-label text-white"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label text-white">Description</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="control-label text-white">Price</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group box">
            <label class="control-label">Genres</label>
            @foreach (var genre in ViewBag.Genres)
            {
                <div class="form-check">
                    <input type="checkbox" name="GenresIds" value="@genre.Id" class="form-check-input" />
                    <label class="form-check-label text-white">@genre.Name</label>
                </div>
            }
            <span asp-validation-for="GenresIds" class="text-danger"></span>
        </div>
        <div class="clr"></div>

        <div class="form-group">
            <input type="submit" value="Edit" class="btn btn-primary" />
        </div>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}