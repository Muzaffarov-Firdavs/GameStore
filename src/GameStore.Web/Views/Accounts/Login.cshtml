@using GameStore.Service.DTOs.Accounts;
@model AccountLoginDto
@{
    Layout = "_AccountLayout.cshtml";
}

<div class="card w-450px h-470px mt-20 mb-100 shadow1" style="margin-left:auto; margin-right:auto; box-shadow: 0px 0px 15px gray;">
    <div class="py-10 pe-10 px-10">
        <form asp-controller="accounts" asp-action="Login" method="post">
            <div class="text-center mb-11">
                <h1 class="text-dark fw-bolder mb-3">
                    Sign In
                </h1>
            </div>
            <div class="form__inputBox mt-5">
                <label class="required form-label">Phone Number</label>
                <input type="text" asp-for="Email" class="form-control form-control-solid" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form__inputBox mt-5 ">
                <label class="required form-label">Password</label>
                <input type="password" asp-for=Password class="form-control form-control-solid" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mt-20 mb-10">
                <input type="submit" class="btn btn-registan" style="width:100%;" value="SIGN IN" />
            </div>
        </form>
    </div>
</div>
